<%= form_for [@train, carriage.becomes(Carriage)] do |f| %>
  <%= render 'common/errors', resource: @carriage %>

  <div>
    <%= f.label :variant, 'Выберете тип вагона:' %>
    <%= f.select :type, Carriage::TYPES.map {|p| [ p[1], p[0] ] }, {} %>
  </div>
  <div class="field">
    <%= f.label :top_seats, 'Выберете количество верхних мест:' %><br>
    <%= f.text_field :top_seats %>
  </div>
    <div class="field">
    <%= f.label :bottom_seats, 'Выберете количество нижних мест:' %><br>
    <%= f.text_field :bottom_seats %>
  </div>
  <div class="field">
    <%= f.label :side_top_seats, 'Выберете количество верхних боковых мест:' %><br>
    <%= f.text_field :side_top_seats %>
  </div>
    <div class="field">
    <%= f.label :side_bottom_seats, 'Выберете количество нижних боковых мест:' %><br>
    <%= f.text_field :side_bottom_seats %>
  </div>
  <div class="field">
    <%= f.label :seats, 'Выберете количество сидячих мест:' %><br>
    <%= f.text_field :seats %>
  </div>
  <div class="actions">
    <%= f.submit "#{ carriage.new_record? ? 'Создать' : 'Изменить' }"%>
  </div>
<% end %>

