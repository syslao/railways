<h1>Купить билет</h1>

<%= form_for(@ticket) do |f| %>
  <%= render 'common/errors', resource: @ticket %>
  <%= f.hidden_field :train_id %>
  <%= f.hidden_field :departure_station_id %>
  <%= f.hidden_field :destination_station_id %>
  <%= f.label :passenger_name, 'Имя пассажира' %>
  <%= f.text_field :passenger_name %>
  <br/>
  <%= f.label :passport_number, 'Номер паспорта' %>
  <%= f.text_field :passport_number %>
  <br>
  <div class="actions">
    <%= f.submit 'Купить'%>
  </div>
<% end %>